alias ls='ls -F --show-control-chars --color'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias grep='grep --color'
alias fgrep='fgrep --color'
alias egrep='egrep --color'

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias eng='LANG=C LANGUAGE=C LC_ALL=C'

